{% extends 'base.html.twig' %}

{% block title %}Sauce index{% endblock %}

{% block body %}
    <h1>Sauce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sauce in sauces %}
            <tr>
                <td>{{ sauce.id }}</td>
                <td>{{ sauce.nom }}</td>
                <td>
                    <a href="{{ path('app_sauce_show', {'id': sauce.id}) }}">show</a>
                    <a href="{{ path('app_sauce_edit', {'id': sauce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sauce_new') }}">Create new</a>
{% endblock %}
