{% extends 'base.html.twig' %}

{% block title %}Carousel index{% endblock %}

{% block body %}
    <h1>Carousel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carousel in carousels %}
            <tr>
                <td>{{ carousel.id }}</td>
                 <td><img src="{{ asset ('assets/images/' ~ carousel.nom)}}" alt="" style="width:80px"></td>  
                <td>
                    <a href="{{ path('app_carousel_show', {'id': carousel.id}) }}">show</a>
                    <a href="{{ path('app_carousel_edit', {'id': carousel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_carousel_new') }}">Create new</a>
{% endblock %}
