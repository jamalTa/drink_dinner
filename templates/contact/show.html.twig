{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Objet</th>
                <td>{{ contact.objet }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ contact.titre }}</td>
            </tr>
            <tr>
                <th>Date_envoi</th>
                <td>{{ contact.dateEnvoi ? contact.dateEnvoi|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contact_index') }}">Retour à la liste</a>

    <a href="{{ path('app_contact_edit', {'id': contact.id}) }}">Éditer</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
