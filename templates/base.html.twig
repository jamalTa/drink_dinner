<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
						           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
			<link rel="stylesheet" href="{{ asset('assets/css/main.css')}}">
			<link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css')}}">
			<link href="https://fonts.googleapis.com/css?family=Holtwood+One+SC" rel="stylesheet">
			<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
		{% endblock %}

	
	</head>
	<body>
	<header class="header">
	<h1 class="text-logo">Drink diner's</h1>
		{% if app.user %}
			<h1>Bienvenu
				{{app.user.prenom}}
			</h1>
		{% endif %}		
		
		<nav class="navbars">
			<ul class="nav nav-pills " role="tablist">
				<li class="nav-item">
					<a class="nav-link" href="{{ path('home')}}">Acceuil</a>
				</li>
				{% if app.user %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path('categorie_catalogue')}}">Nos menus</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('profil')}}">Mon profile</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('panier')}}">Mon panier</a>
					</li>
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_contact_show')}}">Messagerie</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_categorie_index')}}">Categories</a>
						</li>
							<li class="nav-item">
							<a class="nav-link" href="{{ path('app_produit_index')}}">Produits</a>
						</li>
						</li>
							<li class="nav-item">
							<a class="nav-link" href="{{path('app_carousel_index')}}">Image carousel</a>
						</li>
						</li>
							<li class="nav-item">
							<a class="nav-link" href="{{path('app_commande_index')}}">Commande</a>
						</li>
					{% endif %}			
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_logout')}}">Deconnexion</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_login')}}">Connexion</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('app_register')}}">Inscription</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path('categorie_catalogue')}}">Nos menus</a>
					</li>
				{% endif %}
			</ul>
		</nav>
		<div class="burger">
		
		{#<i class="fa fa-bars  fa-lg" aria-hidden="true"></i>#}
		<a class="btn btn-light" href="#" aria-label="Skip to main navigation">
			<i class="fa fa-bars" aria-hidden="true"></i>
		</a>

		</div>
		

		</header>	
		
		{% block body %}
	
		{% for item in  carousels %}
			
		{% endfor %}
			<div id="carouselExampleControls" class="carousel slide"data-bs-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="d-block w-100" src="" alt="First slide">
					</div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>


		<div class="carre">

		</div>
		{% endblock %}

        		
			
		
		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
			<script src="{{ asset('assets/js/bootstrap.min.js')}}"></script>
			<script src="{{ asset('assets/js/main.js')}}"></script>
			<script src="https://kit.fontawesome.com/0f9e64704e.js" crossorigin="anonymous"></script>
		{% endblock %}
	
	</body>
</html>
